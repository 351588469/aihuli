<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="GMMapper">
	
	<!--表名 -->
	<sql id="tableName">
		GM
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		GM_NAME,	
		GM_AVATER,	
		GM_ADDRESS,	
		GM_TEL,	
		GM_CONCAT,	
		GM_NATURE,	
		GM_SQUARE,	
		GM_BERTH_COUNT,	
		GM_DESCRIPTION,	
		GM_RECEIVE,	
		GM_FEEDESC ,	
		GM_SERVEINFO,	
		GM_LICENCE_PHOTO,	
		GM_LEGALPERSON_PHOTOA,	
		GM_LEGALPERSON_PHOTOB,	
		GM_CKSTATUS,	
		GM_CKDESC,	
		GM_AU_ID,	
		GM_CTIME,	
		GM_UTIME,	
		GM_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{GM_NAME},	
		#{GM_AVATER},	
		#{GM_ADDRESS},	
		#{GM_TEL},	
		#{GM_CONCAT},	
		#{GM_NATURE},	
		#{GM_SQUARE},	
		#{GM_BERTH_COUNT},	
		#{GM_DESCRIPTION},	
		#{GM_RECEIVE},	
		#{GM_FEEDESC },	
		#{GM_SERVEINFO},	
		#{GM_LICENCE_PHOTO},	
		#{GM_LEGALPERSON_PHOTOA},	
		#{GM_LEGALPERSON_PHOTOB},	
		#{GM_CKSTATUS},	
		#{GM_CKDESC},	
		#{GM_AU_ID},	
		#{GM_CTIME},	
		#{GM_UTIME},	
		#{GM_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			GM_ID = #{GM_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			GM_NAME = #{GM_NAME},
			GM_AVATER = #{GM_AVATER},
			GM_ADDRESS = #{GM_ADDRESS},
			GM_TEL = #{GM_TEL},
			GM_CONCAT = #{GM_CONCAT},
			GM_NATURE = #{GM_NATURE},
			GM_SQUARE = #{GM_SQUARE},
			GM_BERTH_COUNT = #{GM_BERTH_COUNT},
			GM_DESCRIPTION = #{GM_DESCRIPTION},
			GM_RECEIVE = #{GM_RECEIVE},
			GM_FEEDESC  = #{GM_FEEDESC },
			GM_SERVEINFO = #{GM_SERVEINFO},
			GM_LICENCE_PHOTO = #{GM_LICENCE_PHOTO},
			GM_LEGALPERSON_PHOTOA = #{GM_LEGALPERSON_PHOTOA},
			GM_LEGALPERSON_PHOTOB = #{GM_LEGALPERSON_PHOTOB},
			GM_CKSTATUS = #{GM_CKSTATUS},
			GM_CKDESC = #{GM_CKDESC},
			GM_AU_ID = #{GM_AU_ID},
		GM_ID = GM_ID
		where 
		GM_ID = #{GM_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			GM_ID = #{GM_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			GM_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
</mapper>