<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="GMUserMapper">
	
	<!--表名 -->
	<sql id="tableName">
		GM_GMUSER
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		GMU_GM_ID,	
		GMU_NAME,	
		GMU_GENDER,	
		GMU_BIRTHDAY,	
		GM_EDATE,	
		GMU_DUTIES,	
		GMU_HEALTH,	
		GMU_MARRIAGE,	
		GMU_TEL,	
		GMU_EMAIL,	
		GMU_CENSUS,	
		GMU_ADDRESS,	
		GMU_ESTATUS,	
		GMU_EDUCATION,	
		GMU_COLLAGE,	
		GMU_MAJOR,	
		GMU_LENGLISH,	
		GMU_LCOMPUTER,	
		GMU_WAGE,	
		GMU_AVATER,	
		GMU_PWD,	
		GMU_GMUID,	
		GMU_CTIME,	
		GMU_UTIME,	
		GMUSER_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{GMU_GM_ID},	
		#{GMU_NAME},	
		#{GMU_GENDER},	
		#{GMU_BIRTHDAY},	
		#{GM_EDATE},	
		#{GMU_DUTIES},	
		#{GMU_HEALTH},	
		#{GMU_MARRIAGE},	
		#{GMU_TEL},	
		#{GMU_EMAIL},	
		#{GMU_CENSUS},	
		#{GMU_ADDRESS},	
		#{GMU_ESTATUS},	
		#{GMU_EDUCATION},	
		#{GMU_COLLAGE},	
		#{GMU_MAJOR},	
		#{GMU_LENGLISH},	
		#{GMU_LCOMPUTER},	
		#{GMU_WAGE},	
		#{GMU_AVATER},	
		#{GMU_PWD},	
		#{GMU_GMUID},	
		#{GMU_CTIME},	
		#{GMU_UTIME},	
		#{GMUSER_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			GMUSER_ID = #{GMUSER_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			GMU_GM_ID = #{GMU_GM_ID},
			GMU_NAME = #{GMU_NAME},
			GMU_GENDER = #{GMU_GENDER},
			GMU_BIRTHDAY = #{GMU_BIRTHDAY},
			GM_EDATE = #{GM_EDATE},
			GMU_DUTIES = #{GMU_DUTIES},
			GMU_HEALTH = #{GMU_HEALTH},
			GMU_MARRIAGE = #{GMU_MARRIAGE},
			GMU_TEL = #{GMU_TEL},
			GMU_EMAIL = #{GMU_EMAIL},
			GMU_CENSUS = #{GMU_CENSUS},
			GMU_ADDRESS = #{GMU_ADDRESS},
			GMU_ESTATUS = #{GMU_ESTATUS},
			GMU_EDUCATION = #{GMU_EDUCATION},
			GMU_COLLAGE = #{GMU_COLLAGE},
			GMU_MAJOR = #{GMU_MAJOR},
			GMU_LENGLISH = #{GMU_LENGLISH},
			GMU_LCOMPUTER = #{GMU_LCOMPUTER},
			GMU_WAGE = #{GMU_WAGE},
			GMU_AVATER = #{GMU_AVATER},
			GMU_PWD = #{GMU_PWD},
			GMU_GMUID = #{GMU_GMUID},
		GMUSER_ID = GMUSER_ID
		where 
		GMUSER_ID = #{GMUSER_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			GMUSER_ID = #{GMUSER_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1 
		<if test="pd.GMU_GM_ID!= null and pd.GMU_GM_ID != ''">
		and GMU_GM_ID=#{pd.GMU_GM_ID}
		</if>
		<if test="pd.KEY_BIRTHDAY_START!= null and pd.KEY_BIRTHDAY_START != ''">
		and GMU_BIRTHDAY&gt;=#{pd.KEY_BIRTHDAY_START}
		</if>
		<if test="pd.KEY_BIRTHDAY_END!= null and pd.KEY_BIRTHDAY_END != ''">
		and GMU_BIRTHDAY&lt;=#{pd.KEY_BIRTHDAY_END}
		</if>
		<if test="pd.KEY_GENDER!= null and pd.KEY_GENDER != ''">
		and GMU_GENDER&gt;=#{pd.KEY_GENDER}
		</if>
		<if test="pd.KEY_DUTIES!= null and pd.KEY_DUTIES != ''">
		and GMU_DUTIES=#{pd.KEY_DUTIES}
		</if>
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
					
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			GMUSER_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	<!-- 根据职工姓名检测职工信息是否存在 -->
	<select id="zzyCheckByName" parameterType="String" resultType="String">
		select GMUSER_ID from
		<include refid="tableName"></include>
		where GMU_NAME=#{GMU_NAME} and GMU_GM_ID=#{GMU_GM_ID}
	</select>
	<!--  -->
	<select id="zzyListForNameID" parameterType="java.lang.String" resultType="java.util.Map">
		select GMU_NAME,GMUSER_ID from 
		<include refid="tableName"></include>
		where GMU_GM_ID=#{0}
	</select>
	<!--根据职工编号获取职工姓名  -->
	<select id="zzyFindNameById" parameterType="java.lang.String" resultType="java.lang.String">
		select GMU_NAME from
		<include refid="tableName"></include>
		where GMUSER_ID=#{0}
	</select>
	<!-- 医护端登录 -->
	<select id="zzyLogin" parameterType="java.lang.String" resultType="pd">
		select 
		<include refid="Field"></include>
		from GM_GMUSER 
		where GMU_TEL=#{0} limit 1
	</select>
</mapper>