<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="VActivityMapper">
	
	<!--表名 -->
	<sql id="tableName">
		VACTIVITY
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		VA_TOPIC,	
		VA_CITY,	
		VA_ADDRESS,	
		VA_KEYWORD,	
		VA_CONTENT,	
		VA_SCHEDULE,	
		VA_VT_ID,	
		VA_PRAISE,	
		VA_ENROLL,	
		VA_ENROLL_M,	
		VA_STIME,	
		VA_ETIME,	
		VA_CTIME,	
		VA_UTIME,	
		VACTIVITY_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{VA_TOPIC},	
		#{VA_CITY},	
		#{VA_ADDRESS},	
		#{VA_KEYWORD},	
		#{VA_CONTENT},	
		#{VA_SCHEDULE},	
		#{VA_VT_ID},	
		#{VA_PRAISE},	
		#{VA_ENROLL},	
		#{VA_ENROLL_M},	
		#{VA_STIME},	
		#{VA_ETIME},	
		#{VA_CTIME},	
		#{VA_UTIME},	
		#{VACTIVITY_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			VACTIVITY_ID = #{VACTIVITY_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			VA_TOPIC = #{VA_TOPIC},
			VA_CITY = #{VA_CITY},
			VA_ADDRESS = #{VA_ADDRESS},
			VA_KEYWORD = #{VA_KEYWORD},
			VA_CONTENT = #{VA_CONTENT},
			VA_SCHEDULE = #{VA_SCHEDULE},
			VA_VT_ID = #{VA_VT_ID},
			VA_PRAISE = #{VA_PRAISE},
			VA_ENROLL_M = #{VA_ENROLL_M},
			VA_STIME = #{VA_STIME},
			VA_ETIME = #{VA_ETIME},
		VACTIVITY_ID = VACTIVITY_ID
		where 
		VACTIVITY_ID = #{VACTIVITY_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			VACTIVITY_ID = #{VACTIVITY_ID}
	</select>
	<!-- 通过ID获取数据 -->
	<select id="zzyFindById" parameterType="String" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			VACTIVITY_ID = #{0}
	</select>
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	<!-- 列表 -->
	<select id="zzyList" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="VA_CITY!= null and VA_CITY!= ''"><!-- 关键词检索 -->
		and VA_CITY=#{VA_CITY}
		</if>
	</select>
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			VACTIVITY_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	<!-- 修改报名人数 -->
	<update id="zzyUpdateEnroll" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 	
		VA_ENROLL_M =VA_ENROLL_M+#{NUM},
		VA_UTIME=#{VA_UTIME}
		where 
		VACTIVITY_ID = #{VACTIVITY_ID}
	</update>
</mapper>