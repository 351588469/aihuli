<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="VDonationMapper">
	
	<!--表名 -->
	<sql id="tableName">
		VDONATION
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		VD_TITLE,	
		VD_TARGET,	
		VD_CONTENT,	
		VD_CITY,
		VD_USER_ID,	
		VD_USER_AVATER,	
		VD_USER_NAME,	
		VD_PRAISE,	
		VD_STATUS,	
		VD_CTIME,	
		VD_UTIME,	
		VDONATION_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{VD_TITLE},	
		#{VD_TARGET},	
		#{VD_CONTENT},	
		#{VD_CITY},
		#{VD_USER_ID},	
		#{VD_USER_AVATER},	
		#{VD_USER_NAME},	
		#{VD_PRAISE},	
		#{VD_STATUS},	
		#{VD_CTIME},	
		#{VD_UTIME},	
		#{VDONATION_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			VDONATION_ID = #{VDONATION_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			VD_TITLE = #{VD_TITLE},
			VD_TARGET = #{VD_TARGET},
			VD_CONTENT = #{VD_CONTENT},
			VD_USER_ID = #{VD_USER_ID},
		VDONATION_ID = VDONATION_ID
		where 
		VDONATION_ID = #{VDONATION_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			VDONATION_ID = #{VDONATION_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	<!-- 列表-->
	<select id="zzyList" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="VD_CITY!= null and VD_CITY != ''">
			and VD_CITY=#{VD_CITY}
		</if>
		<if test="VD_USER_ID!= null and VD_USER_ID != ''">
			and VD_USER_ID=#{VD_USER_ID}
		</if>
	</select>
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			VDONATION_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	<!-- 修改点赞人数 -->
	<update id="zzyUpdatePraise" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 	
		VD_PRAISE=VD_PRAISE+#{NUM},
		VD_UTIME=#{VD_UTIME}
		where 
		VDONATION_ID = #{VDONATION_ID}
	</update>
</mapper>