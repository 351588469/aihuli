<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="VTNewMapper">
	
	<!--表名 -->
	<sql id="tableName">
		VTNEW
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		VTN_VTT_ID,
		VTN_P_ID,	
		VTN_P_AVATER,	
		VTN_P_NAME,	
		VTN_R_ID,	
		VTN_R_PID,	
		VTN_R_PAVATER,	
		VTN_R_PNAME,	
		VTN_CONTENT,	
		VTN_STATUS,	
		VTN_CTIME,	
		VTN_UTIME,	
		VTNEW_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{VTN_VTT_ID},
		#{VTN_P_ID},	
		#{VTN_P_AVATER},	
		#{VTN_P_NAME},	
		#{VTN_R_ID},	
		#{VTN_R_PID},	
		#{VTN_R_PAVATER},	
		#{VTN_R_PNAME},	
		#{VTN_CONTENT},	
		#{VTN_STATUS},	
		#{VTN_CTIME},	
		#{VTN_UTIME},	
		#{VTNEW_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			VTNEW_ID = #{VTNEW_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			VTN_P_ID = #{VTN_P_ID},
			VTN_R_ID = #{VTN_R_ID},
			VTN_CONTENT = #{VTN_CONTENT},
		VTNEW_ID = VTNEW_ID
		where 
		VTNEW_ID = #{VTNEW_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			VTNEW_ID = #{VTNEW_ID}
	</select>
		<!-- 通过ID获取数据 -->
	<select id="zzyFindById" parameterType="String" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			VTNEW_ID = #{0}
	</select>
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	<!-- 列表 -->
	<select id="zzyList" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where VTN_VTT_ID=#{VTN_VTT_ID} 
		order by VTN_UTIME desc
	</select>
	<!--有回复列表 -->
	<select id="zzyList_1" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where VTN_VTT_ID=#{VTN_VTT_ID} 
		and VTN_R_ID is not null
		order by VTN_UTIME
	</select>
	<!--无回复 列表 -->
	<select id="zzyList_2" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where VTN_VTT_ID=#{VTN_VTT_ID} 
		and VTN_R_ID is null
		order by VTN_UTIME desc
	</select>
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			VTNEW_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
</mapper>