<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="VTeamMapper">
	
	<!--表名 -->
	<sql id="tableName">
		VTEAM
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		VT_NAME,	
		VT_LOGO,	
		VT_CITY,	
		VT_ADDRESS,	
		VT_DESCRIBE,	
		VT_C_ID,	
		VT_CONCERN,	
		VT_THEME,	
		VT_HTIME,	
		VT_CTIME,	
		VT_UTIME,	
		VT_STATUS,	
		VTEAM_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{VT_NAME},	
		#{VT_LOGO},	
		#{VT_CITY},	
		#{VT_ADDRESS},	
		#{VT_DESCRIBE},	
		#{VT_C_ID},	
		#{VT_CONCERN},	
		#{VT_THEME},	
		#{VT_HTIME},	
		#{VT_CTIME},	
		#{VT_UTIME},	
		#{VT_STATUS},	
		#{VTEAM_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			VTEAM_ID = #{VTEAM_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			VT_NAME = #{VT_NAME},
			VT_LOGO = #{VT_LOGO},
			VT_CITY = #{VT_CITY},
			VT_ADDRESS = #{VT_ADDRESS},
			VT_DESCRIBE = #{VT_DESCRIBE},
			VT_C_ID = #{VT_C_ID},
			VT_HTIME = #{VT_HTIME},
		VTEAM_ID = VTEAM_ID
		where 
		VTEAM_ID = #{VTEAM_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			VTEAM_ID = #{VTEAM_ID}
	</select>
	<!-- 通过ID获取数据 -->
	<select id="zzyFindById" parameterType="String" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			VTEAM_ID = #{0}
	</select>
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	<!-- 列表(全部) -->
	<select id="zzyList" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="VT_CITY!= null and VT_CITY != ''">
		and VT_CITY=#{VT_CITY}
		</if>
		<if test="VT_STATUS!= null and VT_STATUS != ''">
		and VT_STATUS=#{VT_STATUS}
		</if>
	</select>
	<select id="zzyListWithMultId"  resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			VTEAM_ID in
		<foreach item="item" index="index" collection="list"  open="(" separator="," close=")">
          #{item}
         </foreach>
	</select>
	<select id="zzyCountWithMultId"  resultType="java.lang.Integer">
		select
		count(*)
		from 
		<include refid="tableName"></include>
		where 
			VTEAM_ID in
		<foreach item="item" index="index" collection="list"  open="(" separator="," close=")">
          #{item}
         </foreach>
	</select>
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			VTEAM_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	<!-- 关注数+1 -->
	<update id="zzyAddConcern" parameterType="String">
		update 
		<include refid="tableName"></include>
		set VT_CONCERN=VT_CONCERN+1
		where 
		VTEAM_ID = #{0}
	</update>
	<!-- 关注数-1 -->
	<update id="zzyMinusConcern" parameterType="String">
		update 
		<include refid="tableName"></include>
		set VT_CONCERN=VT_CONCERN-1
		where 
		VTEAM_ID = #{0}
	</update>
	<!-- 话题数+1 -->
	<update id="zzyAddTheme" parameterType="String">
		update 
		<include refid="tableName"></include>
		set VT_THEME=VT_THEME+1
		where 
		VTEAM_ID = #{0}
	</update>
	<!-- 话题数-1 -->
	<update id="zzyMinusTheme" parameterType="String">
		update 
		<include refid="tableName"></include>
		set VT_THEME=VT_THEME-1
		where 
		VTEAM_ID = #{0}
	</update>
	<select id="zzyCheckAdd" parameterType="String" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where
		VT_C_ID=#{0}
		limit 1
	</select>
</mapper>